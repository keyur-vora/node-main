<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>View Store</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* Custom Styles */
        html,
        body {
            height: 100%;
            margin: 0;
            font-family: 'Arial', sans-serif;
        }

        body {
            background: linear-gradient(to bottom, #e3f2fd, #e8eaf6);
            display: flex;
            flex-direction: column;
        }

        .container {
            max-width: 1200px;
            margin-top: 40px;
            flex-grow: 1;
        }

        h1 {
            font-size: 2.5rem;
            font-weight: bold;
            text-align: center;
            color: #333333;
        }

        .header-buttons {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .card {
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            border-radius: 15px;
            background: #ffffff;
            border: 1px solid #e0e0e0;
        }

        .card:hover {
            transform: translateY(-10px);
            box-shadow: 0 6px 18px rgba(0, 0, 0, 0.15);
        }

        .card-body {
            padding: 1.2rem;
        }

        .card-title {
            font-size: 1.3rem;
            font-weight: bold;
            color: #333333;
        }

        .card-text {
            font-size: 0.95rem;
            color: #6c757d;
        }

        .card-img-top {
            height: 180px;
            object-fit: cover;
            border-radius: 15px 15px 0 0;
        }

        .btn {
            font-size: 0.9rem;
            padding: 0.5rem 1rem;
            border-radius: 5px;
        }

        .btn-primary {
            background-color: #42a5f5;
            border: none;
        }

        .btn-primary:hover {
            background-color: #1e88e5;
        }

        .btn-danger {
            background-color: #ef5350;
            border: none;
        }

        .btn-danger:hover {
            background-color: #d32f2f;
        }

        .btn-dark {
            background-color: #546e7a;
            border: none;
        }

        .btn-dark:hover {
            background-color: #37474f;
        }

        .action-btns {
            margin-top: 1rem;
            display: flex;
            gap: 10px;
        }

    </style>
</head>

<body>
    <div class="container">
        <!-- Header Section -->
        <div class="header-buttons mb-4">
            <h1>View Store</h1>
            <div>
                <a href="/" class="btn btn-dark">Home</a>
                <a href="/add" class="btn btn-dark">Add New Movie</a>
            </div>
        </div>

        <!-- Cards Section -->
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4">
            <% detail.map((val)=> { %>
                <div class="col">
                    <div class="card shadow">
                        <img src="<%= val.image %>" class="card-img-top" alt="<%= val.name %>">
                        <div class="card-body">
                            <h5 class="card-title">
                                <%= val.name %>
                            </h5>
                            <p class="card-text"><strong>Price:</strong> ₹<%= val.price %>
                            </p>
                            <p class="card-text"><strong>Seats:</strong>
                                <%= val.seats %>
                            </p>
                            <p class="card-text"><strong>Total Price:</strong> ₹<%= val.price * val.seats %>
                            </p>
                            <p class="card-text"><strong>Description:</strong>
                                <%= val.description %>
                            </p>
                            <div class="action-btns">
                                <a href="/edit?editId=<%= val._id %>" class="btn btn-primary">Edit</a>
                                <a href="/delete?deletId=<%= val._id %>" class="btn btn-danger">Delete</a>
                            </div>
                        </div>
                    </div>
                </div>
                <% }) %>
        </div>
    </div>

    

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>