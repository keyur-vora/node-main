<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <title>Add Movie</title>
    <style>
      body {
        background-color: rgb(25 25 25) !important;
        font-family: Arial, sans-serif;
      }

      .form-container {
        background-color: rgb(44, 44, 44) !important;
        border-radius: 16px;
        box-shadow: 0 4px 16px rgba(0, 0, 0, 0.1);
        padding: 30px;
        width: 100%;
        max-width: 500px;
        margin: 50px auto;
      }

      .form-header {
        text-align: center;
        margin-bottom: 20px;
      }

      .form-header h1 {
        font-size: 1.8rem;
        margin: 0;
      }

      .form-label {
        font-weight: 500;
        color: #6c757d;
      }

      form input {
        background-color: rgb(25 25 25);
      }

      .form-control,
      .form-select {
        border-radius: 12px;
        border: 1px solid #d1d9e6;
        padding: 10px;
      }

      .form-control:focus,
      .form-select:focus {
        border-color: #007bff;
        box-shadow: 0 0 5px rgba(0, 123, 255, 0.4);
      }

      .btn-primary {
        background-color: transparent;
        color: #000 !important;
        border: 1px solid #ffe372;
        color: #fff !important;
        border-radius: 12px;
        padding: 10px;
        width: 100%;
        font-size: 1rem;
        transition: background-color 0.3s;
      }

      .btn-primary:hover {
        background-color: #ffe372;
        color: #000 !important;
      }

      .btn-outline-secondary {
        margin-top: 10px;
        border-radius: 12px;
        padding: 10px;
        width: 100%;
        color: #007bff;
        border: 1px solid #007bff;
        transition: background-color 0.3s, color 0.3s;
      }

      .btn-outline-secondary:hover {
        background-color: #007bff;
        color: white;
      }

      .form-footer {
        text-align: center;
        margin-top: 20px;
        color: #6c757d;
        font-size: 0.9rem;
      }
    </style>
  </head>

  <body>
    <div class="form-container">
      <div class="form-header">
        <h1>Add New Movie</h1>
      </div>
      <form action="/insertdetail" method="post" enctype="multipart/form-data">
        <!-- Full Name -->
        <div class="mb-4">
          <label for="movieName" class="form-label">Movie Name</label>
          <input
            type="text"
            id="movieName"
            class="form-control"
            name="name"
            placeholder="Enter the movie name"
            required
          />
        </div>

        <!-- Country -->
        <div class="mb-4">
          <label for="moviePrice" class="form-label">Price ($)</label>
          <input
            type="number"
            id="moviePrice"
            class="form-control"
            name="price"
            placeholder="Enter the movie price"
            required
          />
        </div>

        <!-- Address -->
        <div class="mb-4">
          <label for="movieSeats" class="form-label">Seats Available</label>
          <select class="form-select" name="seats" id="movieSeats" required>
            <option value="" disabled selected>Select seats available</option>
            <option value="1" selected>1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
            <option value="5">5</option>
            <option value="6">6</option>
            <option value="7">7</option>
            <option value="8">8</option>
          </select>
        </div>

        <!-- Description -->
        <div class="mb-4">
          <label for="movieDescription" class="form-label">Description</label>
          <textarea
            id="movieDescription"
            class="form-control"
            name="description"
            rows="2"
            placeholder="Enter a brief description of the movie"
            required
          ></textarea>
        </div>

        <!-- Upload Movie Image -->
        <div class="mb-4">
          <label for="movieImage" class="form-label">Upload Movie Image</label>
          <input
            type="file"
            id="movieImage"
            class="form-control"
            name="image"
            required
          />
        </div>

        <!-- Submit Button -->
        <button type="submit" class="btn btn-primary">Add Movie</button>
        <a href="/view" class="btn btn-outline-secondary">View Movies</a>
      </form>
      <div class="form-footer">
        <p>Powered by <strong>MovieManager</strong></p>
      </div>
    </div>
  </body>
</html>
