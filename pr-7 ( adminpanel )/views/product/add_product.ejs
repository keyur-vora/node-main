<%- include('../header') %>

<div class="page-wrapper" style="background-color: #141619; color: white; min-height: 100vh; display: flex; flex-direction: column;">
    <div class="page-breadcrumb" style="flex-shrink: 0;">
        <div class="row">
            <div class="col-12 d-flex no-block align-items-center">
                <h4 class="page-title" style="color: white;">Add Product</h4>
                <div class="ml-auto text-right">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb" style="background-color: transparent;">
                            <li class="breadcrumb-item"><a href="#" style="color: #adb5bd;">Home</a></li>
                            <li class="breadcrumb-item active" aria-current="page" style="color: white;">Library</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>

    <div class="container-fluid" style="flex-grow: 1; display: flex; align-items: center; justify-content: center;">
        <div class="row" style="width: 100%;">
            <div class="col-md-8 col-lg-6"> <!-- Adjusted column width for better responsiveness -->
                <% if(locals?.message?.success) { %>
                    <div class="alert alert-success" role="alert" style="background-color: #28a745; color: white; border-color: #28a745;">
                        <%= locals?.message?.success %>
                    </div>
                <% } %>

                <div class="card" style="background-color: #1e2a35; border: none; color: white;">
                    <form class="form-horizontal" method="post" action="/exsubcategory/insertexsubcategory">
                        <div class="card-body" >
                            <h4 class="card-title" style="color: white;">Product</h4>
                            <div class="form-group row">
                                <label for="fname" class="col-sm-3 text-right control-label col-form-label" style="color: white;">Category</label>
                                <div class="col-sm-9">
                                    <select name="category" id="category" onchange="categoryRecord()" class="form-control" style="background-color: rgba(255, 255, 255, 0.1); border: none; color: white;">
                                        <option value="">---select category---</option>
                                        <% category.map((cat,index)=>{ %>
                                            <option value="<%= cat?.id %>"><%= cat?.category %></option>
                                        <% }) %>
                                    </select>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="fname" class="col-sm-3 text-right control-label col-form-label" style="color: white;">Subcategory</label>
                                <div class="col-sm-9">
                                    <select name="subcategory" onchange="subcategoryRecord()" id="subcategory" class="form-control" style="background-color: rgba(255, 255, 255, 0.1); border: none; color: white;">
                                        <option value="">---select subcategory---</option>
                                    </select>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="fname" class="col-sm-3 text-right control-label col-form-label" style="color: white;">Exsubcategory</label>
                                <div class="col-sm-9">
                                    <select name="exsubcategory" id="exsubcategory" class="form-control" style="background-color: rgba(255, 255, 255, 0.1); border: none; color: white;">
                                        <option value="">---select exsubcategory---</option>
                                    </select>
                                </div>
                            </div>

                            <div class="form-group row">
                                <label for="fname" class="col-sm-3 text-right control-label col-form-label" style="color: white;">Product</label>
                                <div class="col-sm-9">
                                    <input type="text" name="product" class="form-control" placeholder="Enter Product Name" style="background-color: rgba(255, 255, 255, 0.1); border: none; color: white;">
                                </div>
                            </div>

                            <div class="form-group row">
                                <label for="fname" class="col-sm-3 text-right control-label col-form-label" style="color: white;">Price</label>
                                <div class="col-sm-9">
                                    <input type="number" name="price" class="form-control" placeholder="Enter Product Price" style="background-color: rgba(255, 255, 255, 0.1); border: none; color: white;">
                                </div>
                            </div>

                            <div class="form-group row">
                                <label for="fname" class="col-sm-3 text-right control-label col-form-label" style="color: white;">Description</label>
                                <div class="col-sm-9">
                                    <input type="text" name="description" class="form-control" placeholder="Enter Product Description" style="background-color: rgba(255, 255, 255, 0.1); border: none; color: white;">
                                </div>
                            </div>

                            <div class="form-group row">
                                <label for="fname" class="col-sm-3 text-right control-label col-form-label" style="color: white;">Image</label>
                                <div class="col-sm-9">
                                    <input type="file" name="avatar" class="form-control" style="background-color: rgba(255, 255, 255, 0.1); border: none; color: white;">
                                </div>
                            </div>
                        </div>
                        <div class="border-top" style="border-color: #343a40;">
                            <div class="card-body">
                                <button type="submit" class="btn btn-primary" style="background-color: #007bff; border-color: #007bff;">Submit</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <footer class="footer text-center" style="background-color: #1e2a35; color: white; flex-shrink: 0;">
        All Rights Reserved by Matrix-admin. Designed and Developed by <a href="https://wrappixel.com" style="color: #007bff;">WrapPixel</a>.
    </footer>
</div>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
