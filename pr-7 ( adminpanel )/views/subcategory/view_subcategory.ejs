<%- include('../header') %>

    <div class="page-wrapper"
        style="background-color: #121212; color: #e0e0e0; min-height: 100vh; display: flex; flex-direction: column;">
        <div class="page-breadcrumb" style="background-color: #1c1c1c; padding: 10px 20px;">
            <div class="row">
                <div class="col-12 d-flex no-block align-items-center">
                    <h4 class="page-title" style="color: #ffffff;">View Subcategory</h4>
                    <div class="ml-auto text-right">
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb" style="background-color: #1c1c1c; padding: 0;">
                                <li class="breadcrumb-item"><a href="#"
                                        style="color: #ffffff; text-decoration: none;">Home</a></li>
                                <li class="breadcrumb-item active" aria-current="page" style="color: #ffffff;">
                                    Subcategory</li>
                            </ol>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
        <div class="container-fluid" style="padding: 20px; flex: 1;">
            <div class="row">
                <div class="col-12">
                    <div class="card"
                        style="background-color: #1e2a35; border-radius: 10px; box-shadow: 0 0 10px rgba(0,0,0,0.3);">
                        <div class="card-body" style="padding: 20px;">
                            <% if(locals?.message?.success) { %>
                                <div class="alert alert-success" role="alert"
                                    style="background-color: #28a745; color: white; border-radius: 5px; margin-bottom: 15px;">
                                    <%= locals?.message?.success %>
                                </div>
                                <% } %>
                                    <% if(locals?.message?.delete) { %>
                                        <div class="alert alert-danger" role="alert"
                                            style="background-color: #dc3545; color: white; border-radius: 5px; margin-bottom: 15px;">
                                            <%= locals?.message?.delete %>
                                        </div>
                                        <% } %>
                                            <div class="table-responsive">
                                                <table class="table" style="color: #e0e0e0;">
                                                    <thead>
                                                        <tr>
                                                            <th scope="col" style="color: #b0b3b8;">Id</th>
                                                            <th scope="col" style="color: #b0b3b8;">Category</th>
                                                            <th scope="col" style="color: #b0b3b8;">Subcategory</th>
                                                            <th scope="col" style="color: #b0b3b8;">Action</th>
                                                            <th scope="col" style="color: #b0b3b8;">Status</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        <% subcategory.map((subcat,index)=>{ %>
                                                            <tr>
                                                                <th scope="row">
                                                                    <%= ++index %>
                                                                </th>
                                                                <td>
                                                                    <%= subcat?.categoryId?.category %>
                                                                </td>
                                                                <td>
                                                                    <%= subcat?.subcategory %>
                                                                </td>
                                                                <td>
                                                                    <a href="/subcategory/deletesubcategory?id=<%= subcat?.id %>"
                                                                        class="btn btn-danger btn-sm"
                                                                        style="border-radius: 5px;">Delete</a>
                                                                    <a href="/subcategory/editsubcategory?id=<%= subcat?.id %>"
                                                                        class="btn btn-primary btn-sm"
                                                                        style="border-radius: 5px;">Edit</a>
                                                                </td>
                                                                <td>
                                                                    <% if(subcat?.status==="active" ) { %>
                                                                        <a href="/subcategory/changestatus?id=<%= subcat?.id %>&status=deactive"
                                                                            class="btn btn-success btn-sm"
                                                                            style="border-radius: 5px;">
                                                                            <%= subcat?.status %>
                                                                        </a>
                                                                        <% } else { %>
                                                                            <a href="/subcategory/changestatus?id=<%= subcat?.id %>&status=active"
                                                                                class="btn btn-danger btn-sm"
                                                                                style="border-radius: 5px;">
                                                                                <%= subcat?.status %>
                                                                            </a>
                                                                            <% } %>
                                                                </td>
                                                            </tr>
                                                            <% }) %>
                                                    </tbody>
                                                </table>
                                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <footer class="footer text-center"
            style="background-color: #1c1c1c; color: #ffffff; padding: 10px; width: 100%; margin-top: auto; border-top: 1px solid #444444;">
            All Rights Reserved by Matrix-admin. Designed and Developed by <a href="https://wrappixel.com"
                style="color: #ffffff; text-decoration: none;">WrapPixel</a>.
        </footer>
    </div>

    <%- include('../footer') %>