    <style>
        /* Dark Mode Styles with!important */
        body.dark-mode {
            background-color: #1a2027!important;
            color: #e2e8f0!important;
        }
    
        body.dark-mode.pc-sidebar {
            background-color: #2d3748!important;
        }
    
        body.dark-mode.pc-sidebar.pc-navbar.pc-item.pc-link {
            color: #e2e8f0!important;
        }
    
        body.dark-mode.card {
            background-color: #28313c!important;
            border-color: #3d4857!important;
            color: #e2e8f0!important;
        }
    
        body.dark-mode.table {
            color: #e2e8f0!important;
        }
    
        body.dark-mode.table-hover tbody tr:hover {
            background-color: rgba(255, 255, 255, 0.05)!important;
        }
    
        body.dark-mode input,
        body.dark-mode textarea,
        body.dark-mode select {
            background-color: #374151!important;
            color: #e2e8f0!important;
            border-color: #4b5563!important;
        }
    
        body.dark-mode.btn-primary {
            background-color: #4f46e5!important;
            border-color: #4f46e5!important;
        }
    
        /*... other styles with!important as needed... */
    </style>

