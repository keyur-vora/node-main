<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>View Store</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        body {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            width: 100%;
            background-image: url('https://wallpapersmug.com/download/1600x900/f12332/books.jpg');
            color: #fff !important;
        }

        table {
            backdrop-filter: blur(10px);
            background-color: #0000002a;
            border-radius: 10px !important;
            box-shadow: 0 0 10PX;
        }

        .btn :hover {
            background-color: #fff !important;
        }

        .add:hover {
            background-color: transparent !important;
            color: #fff !important;
        }
    </style>
</head>

<body>

    <div>
        <div class="d-flex justify-content-center py-3">
            <h1 class="">View Store</h1>
            <button class="btn btn-dark ms-4">
                <a class="add text-white" style="text-decoration: none;" href="/">Add</a>
            </button>
        </div>
        <div class="table-body">
            <div class="container">
                <div class="row">
                    <table class="rounded px-3 py-4">
                        <thead>
                            <tr class="border text">
                                <th style="letter-spacing: 2px;">Image&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                                </th>
                                <th style="letter-spacing: 2px;">Name&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                                </th>
                                <th style="letter-spacing: 2px;">Author&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                                </th>
                                <th style="letter-spacing: 2px;">Pages&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                                </th>
                                <th style="letter-spacing: 2px;">Price&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                                </th>
                                <th style="letter-spacing: 2px;">Actions&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            <% for (let val of detail) { %>
                                <tr class="border">
                                    <td class="p-3">
                                        <img src="<%= val.image %>" width="100"
                                            style="height: 300px; object-fit: contain;"
                                            class="card-img-top p-3 img-fluid" alt="Book Image">
                                    </td>
                                    <td>
                                        <%= val.name %>
                                    </td>
                                    <td>
                                        <%= val.author %>
                                    </td>
                                    <td>
                                        <%= val.pages %>
                                    </td>
                                    <td>â‚¹<%= val.price %>
                                    </td>
                                    <td>
                                        <a class=" btn border mx-2 text-white"
                                            href="/delete?deletId=<%= val.id %>">Delete</a>


                                        <a class="btn border mx-2 text-white" href="/edit?editId=<%= val.id %>">Edit</a>
                                    </td>
                                </tr>
                                <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>