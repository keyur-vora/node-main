<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Edit Book</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

  <style>
    body {
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
      width: 100%;
      background-image: url('https://i.pinimg.com/736x/e8/68/b6/e868b678e3c7e0e0387323849a0eb5d7.jpg');
      background-size: cover;
      background-position: center;
    }

    form {
      transition: all 0.5s;
    }

    .form {
      backdrop-filter: blur(10px);
      border: 1px solid rgba(255, 255, 255, 0.5);
      font-size: 15px;
      background-color: rgba(0, 0, 0, 0.281);
      font-weight: 500;
      max-width: 70%;
      transition: all 0.5s;
      border-radius: 10px;
    }

    .form:hover {
      letter-spacing: 2px;
      backdrop-filter: blur(20px) !important;
      box-shadow: 0 0 50px #000 !important;
      background-color: rgba(0, 0, 0, 0.151) !important;
    }

    label {
      color: #fff;
      text-transform: uppercase;
    }

    .form input,
    .form button {
      background-color: transparent;
      border: 2px solid #fff;
      color: #fff;
    }

    .form input::placeholder {
      color: #fff;
    }

    .btn {
      border: 1px solid #fff;
      color: #fff;
      padding: 10px;
      width: 100px;
      transition: all 0.3s;
    }

    .btn:hover {
      background-color: #fff;
      color: black;
    }

    .form img {
      margin-top: 10px;
      border-radius: 5px;
      border: 1px solid #fff;
    }
  </style>
</head>

<body>

  <div class="w-50 mx-auto">
    <div class="d-flex justify-content-center py-3">
      <h1 class="text-center text-white">Edit Book</h1>
      <button class="btn btn-dark ms-4">
        <a class="text-white" style="text-decoration: none;" href="/View">View</a>
      </button>
    </div>
    <div class=" rounded" style="margin-left: 170px;">
      <form class="p-4 form" action="/updatetDetail" method="post" enctype="multipart/form-data">
        <input type="hidden" value="<%= single.id %>" name="editid">
        <div class="mb-3">
          <label for="name" class="form-label">Book Name:</label>
          <input type="text" id="name" class="form-control" name="name" value="<%= single.name %>" required>
        </div>
        <div class="mb-3">
          <label for="price" class="form-label">Book Price:</label>
          <input type="text" id="price" class="form-control" name="price" value="<%= single.price %>" required>
        </div>
        <div class="mb-3">
          <label for="pages" class="form-label">Book Pages:</label>
          <input type="number" id="pages" class="form-control" name="pages" value="<%= single.pages %>" required>
        </div>
        <div class="mb-3">
          <label for="author" class="form-label">Book Author:</label>
          <input type="text" id="author" class="form-control" name="author" value="<%= single.author %>" required>
        </div>
        <div class="mb-3">
          <label for="image" class="form-label">Book Image:</label>
          <input type="file" id="image" class="form-control" name="image" accept="image/*">
          <img id="previewImage" src="<%= single.image %>" width="100" alt="Book Image">
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
    </div>
  </div>

  <script>
    const imageInput = document.getElementById('image');
    const previewImage = document.getElementById('previewImage');

    // Update preview image when a new file is selected
    imageInput.addEventListener('change', (event) => {
      const file = event.target.files[0];
      if (file) {
        const reader = new FileReader();
        reader.onload = (e) => {
          previewImage.src = e.target.result;
        };
        reader.readAsDataURL(file);
      }
    });
  </script>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>